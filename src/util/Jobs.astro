export interface job{
    company:string,
    title:string,
    duration:string,
    tags:string[],
    type:string,
    deadline:string,
    link?:string,
    email?:string,
    logo:string,
}

export async function getInternships() {
    const jobs= await import.meta.glob<job>('/public/opportunity/*.json')
    return jobs.json();
}
